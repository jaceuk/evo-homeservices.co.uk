---
import { Image } from '@astrojs/image/components';
import LogoPlumbing from '../../images/logo-plumbing.svg';
import LogoDrainage from '../../images/logo-drainage.svg';

type Props = Record<string, never>;
---

<section>
	<div class="inner-wrapper">
		<a href="https://www.evo-plumbingandheating.co.uk/"
			><Image class="logo" src={LogoPlumbing} alt="EVO Plumbing and Heating logo" /></a
		>
		<a href="https://www.evo-drainage.co.uk/"
			><Image class="logo" src={LogoDrainage} alt="EVO Drainage Services logo" /></a
		>
	</div>
</section>

<style lang="scss">
	section {
		background: var(--c-evo-green-pale);
		padding: var(--scale-16-32) 0;
	}

	.inner-wrapper {
		display: flex;
		align-items: center;
		flex-direction: row;
		justify-content: center;
		gap: var(--scale-16-32);
	}

	a {
		white-space: nowrap;
	}

	img {
		height: 43px;
	}
</style>
